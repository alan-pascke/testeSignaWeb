<h3>Novo Produto</h3>
<div class="card">
    <div class="card-body">

        <form action="/admin/products/new" method="POST">
            <label for="title">Titulo</label>
                <input type="text" id="title" name="title" title="title" class="form-control">
            
            <label for="sku">Sku</label>
                <input type="text" id="sku_order" name="sku_order" title="sku" class="form-control" >
            
            <label for="value">Valor</label>
                <input type="text" id="value" name="value" title="value" class="form-control" >
                
            <label for="stock">Stock</label>
                <input type="number" id="stock" name="stock"  title="stock" class="form-control">    
            
                <br>
            <button type="submit" class="btn btn-success">Adicionar</button>
        </form>
        
    </div>
</div>