    <div class="alert alert-danger">
        {{text}}
    </div>
    
    {{else}}

{{/each}}

<h3>Editar Cliente</h3>
<div class="card">
    <div class="card-body">

        <form action="/admin/customers/edit/{{customer.id}}" method="POST">
            <input type="hidden" name="id" id="{{customer.id}}" value="{{customer.id}}">
            <label for="name">Nome</label>
                <input type="text" id="name" name="name" class="form-control" value="{{customer.name}}">
            
            <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control" value="{{customer.email}}">
            
            <label for="cpf">CPF</label>
                <input type="text" id="cpf" name="cpf" class="form-control" value="{{customer.cpf}}">
                <br>
            <button type="submit" class="btn btn-success">Editar Cliente</button>
        </form>
        
    </div>
</div>